# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# StatCollector Mode
# mock - генерация тестовых данных (для разработки frontend)
# real - реальные данные из PostgreSQL БД (production)
COLLECTOR_MODE=mock

# PostgreSQL Database (обязательны для COLLECTOR_MODE=real)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_tg_bot
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Cache Settings (для Real collector)
CACHE_TTL=60          # Cache TTL in seconds
CACHE_MAXSIZE=100     # Cache max size

# Logging
LOG_LEVEL=INFO

# CORS Origins (разделённые запятой)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
